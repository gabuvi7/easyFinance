{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components": ["./components/index"],
      "@pages/*": ["./pages/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "@hooks/*": ["./utils/hooks/*"],
      "@api/*": ["./api/*"],
      "@types/*": ["./types/*"],
      "@interfaces/*": ["./utils/interfaces/*"],
      "@firebaseEF/*": ["./firebase/*"],
      "@lib/*": ["./lib/*"],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/users/route.js"
  ],
  "exclude": ["node_modules"]
}
